<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Groups run" verbose="2">
    <test name="External group invocation">
        <groups>
            <run>
                <exclude name="test1" />
            </run>
        </groups>
        <classes>
            <class name="test.methodselectors.SampleTest">
                <methods>
                    <include name="test1" />
                </methods>
            </class>
        </classes>
    </test>
</suite>